{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "ui": ["libs/ui/src/index.ts"],
      "@shared": ["libs/shared/src/index.ts"],
      "@shared/enums/*": ["libs/shared/src/enums/*"],
      "@shared/types/*": ["libs/shared/src/types/*"],
      "@shared/classes/*": ["libs/shared/src/classes/*"],
      "@shared/entities/*": ["libs/shared/src/entities/*"],
      "@shared/repositories/*": ["libs/shared/src/repositories/*"],
      "@shared/styles/*": ["libs/shared/src/styles/*"],
      "@backend/modules/*": ["apps/backend/src/modules/*"],
      "@backend/trpc/*": ["apps/backend/src/trpc/*"],
      "@backend/config/*": ["apps/backend/src/config/*"],
      "@admin/components/*": ["apps/admin/src/components/*"],
      "@admin/assets/*": ["apps/admin/src/assets/*"],
      "@admin/contexts/*": ["apps/admin/src/contexts/*"],
      "@admin/config/*": ["apps/admin/src/config/*"],
      "@admin/hooks/*": ["apps/admin/src/hooks/*"],
      "@admin/pages/*": ["apps/admin/src/pages/*"],
      "@admin/routes/*": ["apps/admin/src/routes/*"],
      "@admin/services/*": ["apps/admin/src/services/*"],
      "@admin/styles/*": ["apps/admin/src/styles/*"],
      "@admin/utils/*": ["apps/admin/src/utils/*"],
      "@admin/lib/*": ["apps/admin/src/lib/*"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
