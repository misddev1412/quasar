{
  "name": "backend",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/backend/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/backend",
        "command": "webpack-cli build",
        "args": ["--node-env=production"]
      },
      "configurations": {
        "development": {
          "args": ["--node-env=development", "--watch"]
        }
      }
    },
    "serve": {
      "executor": "nx:run-commands",
      "defaultConfiguration": "development",
      "configurations": {
        "development": {
          "cwd": "apps/backend",
          "commands": [
            "webpack-cli build --node-env=development",
            "node ../../dist/apps/backend/main.js"
          ],
          "parallel": false
        },
        "production": {
          "cwd": "apps/backend",
          "commands": [
            "webpack-cli build --node-env=production", 
            "node ../../dist/apps/backend/main.js"
          ],
          "parallel": false
        }
      }
    },
    "dev": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/backend",
        "command": "nodemon --watch src --ext ts --exec \"webpack-cli build --node-env=development && node ../../dist/apps/backend/main.js\""
      }
    },
    "migration:run": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/backend",
        "command": "npx ts-node --project tsconfig.migrations.json -r tsconfig-paths/register ../../node_modules/typeorm/cli.js migration:run -d migration-data-source.ts"
      }
    },
    "migration:show": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/backend",
        "command": "npx ts-node --project tsconfig.migrations.json -r tsconfig-paths/register ../../node_modules/typeorm/cli.js migration:show -d migration-data-source.ts"
      }
    },
    "migration:revert": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/backend",
        "command": "npx ts-node --project tsconfig.migrations.json -r tsconfig-paths/register ../../node_modules/typeorm/cli.js migration:revert -d migration-data-source.ts"
      }
    },
    "migration:generate": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/backend",
        "command": "npx ts-node --project tsconfig.migrations.json -r tsconfig-paths/register ../../node_modules/typeorm/cli.js migration:generate -d migration-data-source.ts"
      }
    },
    "seed": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/backend",
        "command": "npx ts-node --project tsconfig.scripts.json src/database/seeders/main.seeder.ts seedIfEmpty"
      },
      "description": "Seed permissions only if database is empty"
    },
    "seed:force": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/backend",
        "command": "npx ts-node --project tsconfig.scripts.json src/database/seeders/main.seeder.ts permissions"
      },
      "description": "Force seed permissions (may create duplicates)"
    },
    "seed:roles": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/backend",
        "command": "npx ts-node --project tsconfig.scripts.json src/database/seeders/main.seeder.ts roles"
      },
      "description": "Seed roles only"
    },
    "seed:reseed": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/backend",
        "command": "npx ts-node --project tsconfig.scripts.json src/database/seeders/main.seeder.ts permissions:reseed"
      },
      "description": "Reseed permissions (may create duplicates)"
    },
    "seed:clear": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/backend",
        "command": "npx ts-node --project tsconfig.scripts.json src/database/seeders/main.seeder.ts permissions:clear"
      },
      "description": "Clear all data and reseed (destructive operation)"
    },
    "seed:all": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/backend",
        "command": "npx ts-node --project tsconfig.scripts.json src/database/seeders/main.seeder.ts all"
      },
      "description": "Run all available seeders"
    },
    "db:test": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/backend",
        "command": "node -e \"console.log('Testing DB connection...'); const { Client } = require('pg'); const { config } = require('dotenv'); config(); const client = new Client({ host: process.env.DB_HOST || 'localhost', port: parseInt(process.env.DB_PORT || '5432'), user: process.env.DB_USERNAME || 'postgres', password: process.env.DB_PASSWORD || 'password', database: process.env.DB_DATABASE || 'quasar_db' }); client.connect().then(() => { console.log('✅ DB connection successful'); return client.query('SELECT version()'); }).then((result) => { console.log('PostgreSQL version:', result.rows[0].version); client.end(); }).catch((err) => { console.error('❌ DB connection failed:', err.message); process.exit(1); });\""
      }
    }
  },
  "tags": []
}

